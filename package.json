{
  "name": "tailphix",
  "version": "0.0.3",
  "description": "UI components for Vue with Tailwind CSS",
  "main": "dist/tailphix.umd.js",
  "module": "dist/tailphix.esm.js",
  "unpkg": "dist/tailphix.min.js",
  "scripts": {
    "serve": "vue-cli-service serve",
    "lint": "vue-cli-service lint",
    "watch": "postcss src/css/tailwind.css -o public/build/tailwind.css --watch",
    "lib": "vue-cli-service build --target lib --name tailphix src/lib.js",
    "build": "npm run build:unpkg & npm run build:es & npm run build:umd",
    "build:umd": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format umd --file dist/tailphix.umd.js",
    "build:es": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format es --file dist/tailphix.esm.js",
    "build:unpkg": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format iife --file dist/tailphix.min.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/l-pizarro/tailphix.git"
  },
  "keywords": [
    "tailwind",
    "vue"
  ],
  "author": "bloem",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/l-pizarro/tailphix/issues"
  },
  "homepage": "https://github.com/l-pizarro/tailphix#readme",
  "dependencies": {
    "autoprefixer": "^9.7.3",
    "core-js": "^3.4.3",
    "postcss-cli": "^6.1.3",
    "tailwindcss": "^1.1.4",
    "vue": "^2.6.10"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.1.0",
    "@vue/cli-plugin-eslint": "^4.1.0",
    "@vue/cli-service": "^4.1.0",
    "babel-eslint": "^10.0.3",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "cross-env": "^5.2.0",
    "minimist": "^1.2.0",
    "rollup": "^1.14.4",
    "rollup-plugin-buble": "^0.19.6",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-uglify-es": "0.0.1",
    "rollup-plugin-vue": "^4.7.2",
    "vue": "^2.6.10",
    "vue-template-compiler": "^2.6.10"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
